<?xml version="1.0" encoding="utf-8"?>
<extension version="3.8" type="plugin" group="content" method="upgrade">
	<name>PLG_CONTENT_CONTENTSPOILER</name>
	<version>1.5</version>
	<creationDate>December 2017</creationDate>
	<author>Dmitry Borets</author>
	<authorEmail>me@theredone.ru</authorEmail>
	<authorUrl>http://www.theredone.ru/index.php/webprogramming/joomla</authorUrl>
	<copyright>Copyright (C) 2016-2017 - Dmitry Borets</copyright>
	<license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
	<description>PLG_CONTENT_CONTENTSPOILER_XML_DESCRIPTION</description>
	<updateservers>
		<server type="extension" priority="1" name="ContentSpoiler Updates">http://theredone.ru/joomla/download/plg_contentspoiler/updater.xml</server>
	</updateservers>
	<files>
		<filename plugin="contentspoiler">contentspoiler.php</filename>
		<filename>index.html</filename>
		<folder>images</folder>
		<folder>js</folder>
		<folder>css</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_content_contentspoiler.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_content_contentspoiler.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					id="show_twister"
					name="show_twister"
					type="radio"
					class="btn-group"
					label="PLG_CONTENTSPOILER_CONFIG_SHOW_TWISTER_LABEL"
					description="PLG_CONTENTSPOILER_CONFIG_SHOW_TWISTER_DESCRIPTION"
					default="1">
						<option value="0">PLG_CONTENTSPOILER_OPTION_HIDE</option>
						<option value="1">PLG_CONTENTSPOILER_OPTION_SHOW</option>
				</field>
				<field
					id="border_color"
					name="border_color"
					type="color"
					label="PLG_CONTENTSPOILER_CONFIG_BORDER_COLOR_LABEL"
					description="PLG_CONTENTSPOILER_CONFIG_BORDER_COLOR_DESCRIPTION"
					default="#000" />
				<field
					id="border_opacity"
					name="border_opacity"
					type="list"
					label="PLG_CONTENTSPOILER_CONFIG_BORDER_OPACITY_LABEL"
					description="PLG_CONTENTSPOILER_CONFIG_BORDER_OPACITY_DESCRIPTION"
					default="0.3">
						<option value="1">No Opacity</option>
						<option value="0">Transparent</option>
						<option value="0.1">0.1</option>
						<option value="0.2">0.2</option>
						<option value="0.3">0.3</option>
						<option value="0.4">0.4</option>
						<option value="0.5">0.5</option>
						<option value="0.6">0.6</option>
						<option value="0.7">0.7</option>
						<option value="0.8">0.8</option>
						<option value="0.9">0.9</option>
				</field>
				<field
					id="header_background_color"
					name="header_background_color"
					type="color"
					label="PLG_CONTENTSPOILER_CONFIG_HEADER_BACKGROUND_COLOR_LABEL"
					description="PLG_CONTENTSPOILER_CONFIG_HEADER_BACKGROUND_COLOR_DESCRIPTION"
					default="#000" />
				<field
					id="header_background_opacity"
					name="header_background_opacity"
					type="list"
					label="PLG_CONTENTSPOILER_CONFIG_HEADER_BACKGROUND_OPACITY_LABEL"
					description="PLG_CONTENTSPOILER_CONFIG_HEADER_BACKGROUND_OPACITY_DESCRIPTION"
					default="0.3">
						<option value="1">No Opacity</option>
						<option value="0">Transparent</option>
						<option value="0.1">0.1</option>
						<option value="0.2">0.2</option>
						<option value="0.3">0.3</option>
						<option value="0.4">0.4</option>
						<option value="0.5">0.5</option>
						<option value="0.6">0.6</option>
						<option value="0.7">0.7</option>
						<option value="0.8">0.8</option>
						<option value="0.9">0.9</option>
				</field>
			</fieldset>
			<fieldset name="advanced">
				<field
					id="registered_only_text"
					name="registered_only_text"
					type="text"
					label="PLG_CONTENTSPOILER_CONFIG_REGISTERED_ONLY_TEXT_LABEL"
					description="PLG_CONTENTSPOILER_CONFIG_REGISTERED_ONLY_TEXT_DESCRIPTION"
					default="This content is for the registered users only"
					size="2">
				</field>
				<field
					id="registered_only_style"
					name="registered_only_style"
					type="list"
					label="PLG_CONTENTSPOILER_CONFIG_REGISTERED_ONLY_TEXT_STYLE_LABEL"
					description="PLG_CONTENTSPOILER_CONFIG_REGISTERED_ONLY_TEXT_STYLE_DESCRIPTION"
					default="0.3">
						<option value="0">Regular</option>
						<option value="1">Bold</option>
						<option value="2">Italic</option>
						<option value="3">Bold Italic</option>
				</field>
				<field
					id="registered_only_color"
					name="registered_only_color"
					type="color"
					label="PLG_CONTENTSPOILER_CONFIG_REGISTERED_ONLY_TEXT_COLOR_LABEL"
					description="PLG_CONTENTSPOILER_CONFIG_REGISTERED_ONLY_TEXT_COLOR_DESCRIPTION"
					default="#555" />
			</fieldset>
		</fields>
	</config>
</extension>
